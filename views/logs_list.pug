extends layout.pug

block content
    h1 Log di #{profilo}

    var tableClasses = ['table', 'table-dark', 'table-striped']

    div
        table(class=tableClasses)
            thead(class='thead-light')
                tr
                    th Data
                    th Profilo
                    th Azione
                    th Testo
            tbody
                each log in logs
                    tr
                        td #{log.createdAt}
                        td #{log.profilo}
                        td #{log.action}
                        td #{log.testo}
                    